[ req ]
default_bits = 1024
encrypt_key = yes
distinguished_name = req_dn
x509_extensions = cert_type

[ req_dn ]
countryName = Country Name (2 letter code)
countryName_value               = RU
countryName_min                 = 2
countryName_max                 = 2

stateOrProvinceName             = State or Province Name (full name)
stateOrProvinceName_value       = St-Petersburg

localityName                    = Locality Name (eg, city)
localityName_value              = St-Petersburg

0.organizationName              = Organization Name (eg, company)
0.organizationName_value        = Sedmoy Slon

0.organizationUnit              = Organization Unit (eg, department)
0.organizationUnit_value        = WiFi-Sherpa

0.commonName                    = Common Name (FQDN of your server)
0.commonName_value              = hot.spot

[ cert_type ]
nsCertType = server
